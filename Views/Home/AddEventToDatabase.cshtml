
@{
    ViewData["Title"] = "Add New Event";
}

@{
    if (ViewBag.ErrorMsg != null)
    {

        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">Error:</h4> @ViewBag.ErrorMsg
        </div>
    }
}

@model List<Groups>

<h1 class="text-light">Add New Event</h1>

<div>
    <form action="../Home/AddEventToDatabase" method="post" class="form-control-lg">
        <label class="col-3 text-light">Event: </label><input class="col-6" type="text" name="eventname" value="" placeholder="Type event here" required />
        <label class="col-3 text-light">Group Name: </label>
        <select name="groupid" class="col-6">
            @foreach (var group in Model)
            {
                <option value=@group.GroupId>@group.GroupName</option>
            }
        </select>
        <div>
            <label class="col-3 text-light">Date:</label>
            <input class="col-6" type="date" name="eventDate" value="" />
        </div>
        <div>
            <label class="col-3 text-light">Time:</label>
            <input class="col-6" type="time" name="eventTime" value="" />
        </div>
        <label class="col-3 text-light">Location/Venue: </label><input class="col-6" type="text" name="venue" value="" required />
        <label class="col-3 text-light">Area (City,ST or ZIP): </label><input class="col-6" type="text" name="venuelocation" value="" required />
        <div>
            <input class="btn btn-success" type="submit" value="Submit" />
        </div>

    </form>
</div>

