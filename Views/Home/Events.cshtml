@model List<EventTable>
@{
    ViewData["Title"] = "Events";
    
}

<h1>Events</h1>

<table class="table table-bordered table-striped">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Group Name</th>
        <th>Date</th>
        <th>Venue</th>
        <th>Location</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @foreach (var m in Model)
    {
        <tr>
            <td>@m.EventName</td>
            <td>@m.EventDescription</td>
            <td>@m.GroupName</td>
            <td>@m.DateAndTime</td>
            <td>@m.Venue</td>
            <td>@m.VenueLocation</td>
            <td>
                <!--When we Edit or Cancel Event, can we send the users a message knowing what's happening-->
            <a href="../Home/EditEvent?id=@m.EventId">Edit Event</a>
            </td>
            <td>
            <a href="../Home/DeleteEvent?id=@m.EventId">Cancel Event</a>
            </td>
            

        </tr>
    }

</table>


