
@{
    ViewData["Title"] = "EditMember";
}

@model GroupMembers

<h1>Edit Member Details</h1>

<br />
<br />
<br />
<form action="../Home/EditMember" method="post">
    <br />
    <br />
    <label class="col-3">Name: </label><input type="text" name="memberName" value="@Model.MemberName" placeholder="Jon"/>
    <br />
    <label class="col-3">Phone Number:</label><input type="text" name="phoneNumber" value="@Model.PhoneNumber" placeholder="+1###376####"/>
    <input type="hidden" name="MemberId" value="@Model.MemberId" />
    <input type="hidden" name="Groups" value="@Model.Groups" />
    <br />
    <br />

    <input class="btn btn-primary" type="submit" value="Edit Group Member" />
</form>


